@model DemoMVCConAuthECopilot.Models.CustomerPagedViewModel
@{
    ViewData["Title"] = "Elenco Clienti";
}
<h2>Elenco Clienti</h2>
<a asp-action="Create" class="btn btn-success mb-3">Aggiungi Cliente</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome Azienda</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model.Customers)
    {
        <tr>
            <td>@customer.CustomerID</td>
            <td>@customer.CompanyName</td>
            <td>
                <a asp-action="Details" asp-route-id="@customer.CustomerID" class="btn btn-sm btn-primary">Dettagli</a>
            </td>
        </tr>
    }
    </tbody>
    </table>

    <nav aria-label="Paginazione clienti">
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">&laquo; Precedente</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">&laquo; Precedente</span></li>
            }

            <li class="page-item active"><span class="page-link">@Model.PageNumber</span></li>

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Successiva &raquo;</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">Successiva &raquo;</span></li>
            }
        </ul>
    </nav>
